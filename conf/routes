# This file defines all module routes (Higher priority routes first)
#
# import these routes in the main app as :
# *     /                       module:cms
#
# ~~~~

# Admin
GET      /cms/admin             cms.Admin.index
GET      /cms/admin/new         cms.Admin.addPage
POST     /cms/admin/upload      cms.Admin.upload
POST     /cms/admin/savepage    cms.Admin.savePage
GET      /cms/admin/imagelist   cms.Admin.imagelist
GET      /cms/admin/edit        cms.Admin.editPage

# Frontend
GET     /image/{name}           cms.Frontend.image
GET     /{template}/{pageName}  cms.Frontend.show
GET     /{pageName}             cms.Frontend.show
